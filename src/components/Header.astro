---
import { datos } from "../data/data.json";
import NavLink from "./NavLink.astro";
---

<header
  class="px- w-full h-[5rem] flex justify-center items-center bg-opacity-70 dark:bg-opacity-70 sticky top-0 left-0 z-10 backdrop-blur-lg"
>
  <div
    class="flex justify-between max-w-5xl xl:max-w-7xl flex-grow px-12 items-center"
  >
    <h1 class="w-1/2 text-2xl lg:text-4xl font-bold">{datos.nick}</h1>
    <nav
      class="w-full h-full flex justify-end items-center gap-1 max-w-5xl xl:max-w-7xl"
    >
      <NavLink nombre="Home" link="/" icono="home" />
      <NavLink nombre="Projects" link="/" icono="projects" />
      <NavLink nombre="About" link="/" icono="home" />
      <NavLink nombre="Contacto" link="/" icono="home" />
    </nav>
  </div>
</header>
