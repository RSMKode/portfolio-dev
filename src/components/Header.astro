---
import { datos } from "../data/data.json";
import NavLink from "./NavLink.astro";
import ThemeSwitch from "./ThemeSwitch.astro";
---

<header
  class="px-6 md:px-12 w-full h-[5rem] flex justify-between max-w-5xl xl:max-w-7xl items-center bg-opacity-70 dark:bg-opacity-70 sticky top-0 left-0 z-10 backdrop-blur-lg"
>
  <h1 class="text-2xl lg:text-4xl font-bold">{datos.nick}</h1>
  <nav class="flex justify-end items-center gap-1 max-w-5xl xl:max-w-7xl">
    <NavLink nombre="Home" link="/" icono="tabler:home" />
    <NavLink nombre="Projects" link="/" icono="tabler:briefcase" />
    <NavLink nombre="About" link="/" icono="tabler:user" />
    <NavLink nombre="Contacto" link="/" icono="tabler:phone" />
    <ThemeSwitch />
  </nav>
</header>
