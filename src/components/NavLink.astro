---
import { Icon } from "astro-icon/components";

const { nombre, link, icono } = Astro.props;
---

<a
  class="flex items-start justify-center text-black dark:text-white hover:bg-emerald-100 dark:hover:bg-rose-900 font-medium px-2 py-1 rounded-lg gap-1 hover:scale-[1.05] active:scale-[1] transition-all duration-300"
  href={link}
  title={nombre}
>
  <Icon name={icono} size={20} class="" />
  <span class="hidden sm:flex">{nombre}</span>
</a>
