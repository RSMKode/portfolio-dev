---
import { Icon } from "astro-icon/components";

const { nombre, link, icono } = Astro.props;
---

<a
  class="flex items-start justify-center text-white font-medium px-2 py-1 rounded-lg gap-2 hover:bg-rose-900 hover:scale-[1.1] active:scale-[1] transition-all duration-300"
  href={link}
  title={nombre}
>
  <Icon name={icono} height={20} width={20} class="text-white" />
  <span class="hidden sm:flex">{nombre}</span>
</a>
