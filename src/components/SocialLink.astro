---
import { Icon } from "astro-icon/components";

const { nombre, link, icono } = Astro.props;
---

<a
  class="flex justify-center font-medium text-black dark:text-white bg-primary-l dark:bg-primary-d px-2 py-1 rounded-lg gap-2 hover:scale-[1.05] active:scale-[1] transition-transform duration-300"
  href={link}
  target="_blank"
  rel="noreferrer"
  title={nombre}
>
  <Icon name={icono} size={20} class="" />
  <span class="text-sm hidden sm:flex">{nombre}</span>
</a>
