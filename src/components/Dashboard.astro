---
import { datos } from "../data/data.json";

import Badge from "./Badge.astro";
import Box from "./Box.astro";
import SocialNav from "./SocialNav.astro";
---

<section class="w-full grid auto-rows-[12rem] grid-cols-6 gap-4">
  <Box class={"row-span-2 col-span-6 xl:col-span-4"}>
    <div
      class="absolute bg-gradient-to-t from-neutral-900 to-transparent inset-0 z-[1]"
    >
    </div>
    <img
      class="absolute w-full h-full object-cover left-0 top-0"
      src={datos.imagenes.foto.src}
      alt={datos.imagenes.foto.alt}
      title={datos.imagenes.foto.alt}
    />
    <article
      class="w-full flex flex-col gap-2 z-[2] absolute left-0 bottom-0 leading-4 p-5"
    >
      <h2
        class="flex flex-wrap gap-2 items-end text-3xl lg:text-4xl font-bold text-white"
      >
        {datos.nombre}
      </h2>
      <h3
        class="text-white/85 flex flex-wrap gap-2 items-center ltext-lg lg:text-xl font-medium"
      >
        {datos.puesto}
      </h3>
      <Badge
        class={datos.disponibilidad.disponible
          ? "bg-green-100 text-green-800"
          : "bg-red-100 text-red-800 dark:bg-red-900 dark:text-red-300"}
      >
        {datos.disponibilidad.texto}
      </Badge>
      <SocialNav />
    </article>
  </Box>

  <Box
    class="flex-col row-span-1 col-span-3 xl:col-span-2 justify-evenly text-black dark:text-white bg-emerald-100 dark:bg-rose-900"
  >
    <h2 class="text-2xl font-bold">Sobre m√≠</h2>
    <p class="w-full opacity-80 text-sm md:text-base">
      {datos.about}
    </p>
  </Box>

  <Box
    class="row-span-1 col-span-3 xl:col-span-2 flex items-center justify-center text-white"
  >
    <img
      class="absolute w-full h-full object-cover"
      src={datos.from.src}
      alt="Location"
      title="Location"
    />
    <div
      class="animated w-24 h-24 bg-rose-900 absolute z-[1] rounded-full bg-opacity-30 border-2 border-white"
    >
    </div>
    <footer
      class="w-full h-10 backdrop-blur-sm absolute left-0 bottom-0 z-[1] flex items-center justify-center text-left text-opacity-70"
      style="opacity: 1;"
    >
      <span class="text-xs font-medium">{datos.from.text}</span>
    </footer>
  </Box>
</section>
<style>
  .animated {
    animation: ping 2s cubic-bezier(0, 0, 0.2, 1) infinite;
  }
  @keyframes ping {
    75%,
    100% {
      transform: scale(2);
      opacity: 0;
    }
  }
</style>
