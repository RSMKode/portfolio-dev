---
import SocialLink from "./SocialLink.astro";
import { links } from "../data/datos.json";

const linksArray = Object.values(links);
---

<ul class="flex flex-row flex-wrap items-center gap-3 mt-1 lg:gap-3">
  {
    linksArray.map((element) => (
      <li>
        <SocialLink
          nombre={element.nombre}
          link={element.link}
          icono={element.icono}
        />
      </li>
    ))
  }
</ul>
