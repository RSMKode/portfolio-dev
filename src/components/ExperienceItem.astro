---
import { Icon } from "astro-icon/components";

interface Props {
  date: string;
  title: string;
  description: string;
  link?: string;
}

const { date, title, description, link } = Astro.props;
---

<div
  class="absolute w-3 h-3 bg-primary-l dark:bg-primary-d rounded-full mt-1.5 -start-1.5 border border-black/50 dark:border-white/50"
>
</div>
<time class="mb-1 text-sm font-normal leading-none opacity-60">{date}</time>
<h3 class="text-lg font-semibold text-gray-900 dark:text-white">
  {title}
</h3>
<p class="mb-4 text-base font-normal opacity-70">
  {description}
</p>
{
  link && (
    <a
      href={link}
      class="inline-flex items-center px-3 py-1 text-sm font-medium text-black dark:text-white bg-primary-l dark:bg-primary-d rounded-md border-2 border-transparent hover:border-black/60  dark:hover:border-white/70  transition-colors duration-200 ease-in-out"
    >
      Ver m√°s &nbsp
      <Icon name="tabler:arrow-right" />
    </a>
  )
}
